local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")

local player = Players.LocalPlayer
local backpack = player:WaitForChild("Backpack")
local starterPack = game:GetService("StarterPack")

local autoSlapEnabled = false
local SLAP_NAME = "Dark Matter Slap"

-- =========================
-- Asegurar Slap en slot 1 (solo si no está)
-- =========================
local function ensureSlapInSlot1()
    local tool = backpack:FindFirstChild(SLAP_NAME)
    if not tool then
        local original = starterPack:FindFirstChild(SLAP_NAME)
        if original then
            tool = original:Clone()
            tool.Parent = backpack
        else
            return
        end
    end
    -- Ponerlo en slot 1 si no está allí
    local children = backpack:GetChildren()
    if children[1] ~= tool then
        tool.Parent = backpack
        -- Ordenar los demás sin duplicar
        for i, v in ipairs(children) do
            if v ~= tool then
                v.Parent = backpack
            end
        end
    end
end

-- Llamar apenas entre al juego
ensureSlapInSlot1()

-- =========================
-- Crear GUI
-- =========================
local playerGui = player:WaitForChild("PlayerGui")
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "RepMenu"
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 250, 0, 150)
frame.Position = UDim2.new(0, 10, 1, -160)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.BorderSizePixel = 0
frame.BackgroundTransparency = 0.1
frame.Parent = screenGui

local title = Instance.new("TextLabel")
title.Text = "REP ANTI LAG"
title.Size = UDim2.new(1, 0, 0, 40)
title.BackgroundTransparency = 1
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.Font = Enum.Font.SourceSansBold
title.TextSize = 24
title.Parent = frame

local button = Instance.new("TextButton")
button.Size = UDim2.new(0.8, 0, 0, 50)
button.Position = UDim2.new(0.1, 0, 0.5, -25)
button.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
button.Text = "FPS DEVOURER V2"
button.TextColor3 = Color3.fromRGB(255, 255, 255)
button.Font = Enum.Font.SourceSansBold
button.TextSize = 20
button.Parent = frame

-- =========================
-- Auto-slap robusto
-- =========================
local function toggleDarkMatterSlap()
    local char = player.Character
    if not char then return end

    local tool = backpack:FindFirstChild(SLAP_NAME) or char:FindFirstChild(SLAP_NAME)
    if not tool then
        local original = starterPack:FindFirstChild(SLAP_NAME)
        if original then
            tool = original:Clone()
            tool.Parent = backpack
        else
            return
        end
    end

    local humanoid = char:FindFirstChild("Humanoid")
    if humanoid then
        local currentTool = humanoid:FindFirstChildOfClass("Tool")
        local wasEquipped = (tool.Parent == char)

        -- Equipar temporalmente si no estaba equipado
        if not wasEquipped then
            humanoid:EquipTool(tool)
        end

        -- Activar Slap
        pcall(function()
            if tool:FindFirstChildOfClass("RemoteEvent") then
                tool:FindFirstChildOfClass("RemoteEvent"):FireServer()
            elseif tool:FindFirstChild("Activate") then
                tool.Activate:Fire()
            end
        end)

        task.wait(0.05)

        -- Volver al tool anterior si era otra
        if not wasEquipped then
            if currentTool and currentTool ~= tool then
                humanoid:EquipTool(currentTool)
            else
                tool.Parent = backpack
            end
        end
    end
end

-- Alternar auto-slap
local function toggleAutoSlap()
    autoSlapEnabled = not autoSlapEnabled
    if autoSlapEnabled then
        button.BackgroundColor3 = Color3.fromRGB(0, 200, 0)
        warn("FPS DEVOURER V2 ACTIVADO")
        task.spawn(function()
            while autoSlapEnabled do
                toggleDarkMatterSlap()
                task.wait(0.05)
            end
        end)
    else
        button.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
        warn("FPS DEVOURER V2 DESACTIVADO")
    end
end

button.MouseButton1Click:Connect(toggleAutoSlap)

UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if gameProcessed then return end
    if input.KeyCode == Enum.KeyCode.R then
        toggleAutoSlap()
    end
end)

-- =========================
-- Draggable menú
-- =========================
local dragging
local dragInput
local dragStart
local startPos

local function update(input)
    local delta = input.Position - dragStart
    frame.Position = UDim2.new(
        startPos.X.Scale,
        startPos.X.Offset + delta.X,
        startPos.Y.Scale,
        startPos.Y.Offset + delta.Y
    )
end

frame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = frame.Position

        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

frame.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement then
        dragInput = input
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        update(input)
    end
end)

