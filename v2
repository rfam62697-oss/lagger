local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local StarterPack = game:GetService("StarterPack")

local player = Players.LocalPlayer
local backpack = player:WaitForChild("Backpack")

-- Estado del modo auto-uso
local autoSlapEnabled = false
local SLAP_NAME = "Dark Matter Slap"

-- =========================
-- Anti-lag: limpiar accesorios
-- =========================
local function clearAccessories(char)
    if not char or not char:IsA("Model") then return end

    for _, v in ipairs(char:GetChildren()) do
        if v:IsA('Accessory') then
            v:Destroy()
        end
    end

    char.DescendantAdded:Connect(function(desc)
        if desc:IsA("Accessory") then
            task.delay(0, function()
                if desc.Parent and desc.Parent:IsDescendantOf(char) then
                    desc:Destroy()
                end
            end)
        end
    end)
end

local function hookPlayer(p)
    local function onCharacter(char)
        clearAccessories(char)
    end

    if p.Character then
        onCharacter(p.Character)
    end
    p.CharacterAdded:Connect(onCharacter)
end

for _, p in ipairs(Players:GetPlayers()) do
    hookPlayer(p)
end
Players.PlayerAdded:Connect(hookPlayer)

-- =========================
-- GUI MODERNO
-- =========================
local playerGui = player:WaitForChild("PlayerGui")
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "RepMenu"
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 300, 0, 200)
frame.Position = UDim2.new(0, 10, 1, -220)
frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
frame.BorderSizePixel = 0
frame.AnchorPoint = Vector2.new(0,0)
frame.Parent = screenGui
frame.ClipsDescendants = true
frame.Rotation = -5 -- efecto inicial sutil
frame.Position = frame.Position + UDim2.new(0,0,0,20) -- animación inicial

-- Animación de entrada suave
game:GetService("TweenService"):Create(frame, TweenInfo.new(0.6, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {Rotation = 0, Position = UDim2.new(0, 10, 1, -200)}):Play()

-- Título
local title = Instance.new("TextLabel")
title.Text = "REP ANTI LAG"
title.Size = UDim2.new(1, -20, 0, 50)
title.Position = UDim2.new(0, 10, 0, 10)
title.BackgroundTransparency = 1
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.Font = Enum.Font.GothamBold
title.TextSize = 24
title.TextXAlignment = Enum.TextXAlignment.Left
title.Parent = frame

-- Separador
local separator = Instance.new("Frame")
separator.Size = UDim2.new(1, -20, 0, 2)
separator.Position = UDim2.new(0, 10, 0, 60)
separator.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
separator.BorderSizePixel = 0
separator.Parent = frame

-- Botón Auto-Slap
local button = Instance.new("TextButton")
button.Size = UDim2.new(0.9, 0, 0, 50)
button.Position = UDim2.new(0.05, 0, 0, 80)
button.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
button.Text = "FPS DEVOURER V2"
button.TextColor3 = Color3.fromRGB(255, 255, 255)
button.Font = Enum.Font.GothamSemibold
button.TextSize = 20
button.AutoButtonColor = false
button.Parent = frame
button.ClipsDescendants = true
button.BorderSizePixel = 0
button.BackgroundTransparency = 0.1
button.TextScaled = true
button.TextWrapped = true
button.TextStrokeTransparency = 0.8

-- Hover effect con Tween
local TweenService = game:GetService("TweenService")
button.MouseEnter:Connect(function()
    TweenService:Create(button, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(100,100,100)}):Play()
end)
button.MouseLeave:Connect(function()
    if autoSlapEnabled then
        TweenService:Create(button, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(0,200,0)}):Play()
    else
        TweenService:Create(button, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(70,70,70)}):Play()
    end
end)

-- Estado
local status = Instance.new("TextLabel")
status.Size = UDim2.new(0.9, 0, 0, 30)
status.Position = UDim2.new(0.05, 0, 0, 140)
status.BackgroundTransparency = 1
status.TextColor3 = Color3.fromRGB(200,200,200)
status.Font = Enum.Font.Gotham
status.TextSize = 16
status.Text = "Estado: DESACTIVADO"
status.TextXAlignment = Enum.TextXAlignment.Left
status.Parent = frame

-- =========================
-- Auto-slap robusto
-- =========================
local function toggleDarkMatterSlap()
    local char = player.Character
    if not char then return end

    local tool = backpack:FindFirstChild(SLAP_NAME) or char:FindFirstChild(SLAP_NAME)
    if not tool then
        local original = StarterPack:FindFirstChild(SLAP_NAME)
        if original then
            tool = original:Clone()
            tool.Parent = backpack
        else
            return
        end
    end

    local humanoid = char:FindFirstChild("Humanoid")
    if not humanoid then return end

    local currentTool = humanoid:FindFirstChildOfClass("Tool")
    local wasEquipped = (tool.Parent == char)

    if not wasEquipped then
        humanoid:EquipTool(tool)
    end

    pcall(function()
        if tool:FindFirstChildOfClass("RemoteEvent") then
            tool:FindFirstChildOfClass("RemoteEvent"):FireServer()
        elseif tool:FindFirstChild("Activate") then
            tool.Activate:Fire()
        end
    end)

    task.wait(0.05)

    if not wasEquipped then
        if currentTool and currentTool ~= tool then
            humanoid:EquipTool(currentTool)
        else
            tool.Parent = backpack
        end
    end
end

local function startAutoSlap()
    task.spawn(function()
        while autoSlapEnabled do
            pcall(toggleDarkMatterSlap)
            task.wait(0.05)
        end
    end)
end

local function toggleAutoSlap()
    autoSlapEnabled = not autoSlapEnabled
    if autoSlapEnabled then
        TweenService:Create(button, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(0,200,0)}):Play()
        startAutoSlap()
    else
        TweenService:Create(button, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(70,70,70)}):Play()
    end
    status.Text = "Estado: " .. (autoSlapEnabled and "ACTIVADO" or "DESACTIVADO")
end

button.MouseButton1Click:Connect(toggleAutoSlap)
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if input.KeyCode == Enum.KeyCode.R then
        toggleAutoSlap()
    end
end)

-- =========================
-- Draggable menú con Tween
-- =========================
local dragging
local dragInput
local dragStart
local startPos

local function update(input)
    local delta = input.Position - dragStart
    frame.Position = UDim2.new(
        startPos.X.Scale,
        startPos.X.Offset + delta.X,
        startPos.Y.Scale,
        startPos.Y.Offset + delta.Y
    )
end

frame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = frame.Position

        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

frame.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement then
        dragInput = input
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        update(input)
    end
end)

