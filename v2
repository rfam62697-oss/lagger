local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local StarterPack = game:GetService("StarterPack")
local TweenService = game:GetService("TweenService")

local player = Players.LocalPlayer
local backpack = player:WaitForChild("Backpack")

local autoSlapEnabled = false
local SLAP_NAME = "Dark Matter Slap"

-- =========================
-- Anti-lag: limpiar accesorios
-- =========================
local function clearAccessories(char)
    if not char or not char:IsA("Model") then return end
    for _, v in ipairs(char:GetChildren()) do
        if v:IsA('Accessory') then
            v:Destroy()
        end
    end
    char.DescendantAdded:Connect(function(desc)
        if desc:IsA("Accessory") then
            task.delay(0, function()
                if desc.Parent and desc.Parent:IsDescendantOf(char) then
                    desc:Destroy()
                end
            end)
        end
    end)
end

local function hookPlayer(p)
    local function onCharacter(char)
        clearAccessories(char)
    end
    if p.Character then
        onCharacter(p.Character)
    end
    p.CharacterAdded:Connect(onCharacter)
end

for _, p in ipairs(Players:GetPlayers()) do
    hookPlayer(p)
end
Players.PlayerAdded:Connect(hookPlayer)

-- =========================
-- GUI SEMI-TRANSPARENTE
-- =========================
local playerGui = player:WaitForChild("PlayerGui")
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "RepMenu"
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

-- Frame principal
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 250, 0, 160)
frame.Position = UDim2.new(0, 10, 1, -180)
frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20) -- color suave
frame.BackgroundTransparency = 0.7 -- transparentito
frame.BorderSizePixel = 0
frame.AnchorPoint = Vector2.new(0,0)
frame.Parent = screenGui
frame.ClipsDescendants = true

local frameUICorner = Instance.new("UICorner")
frameUICorner.CornerRadius = UDim.new(0, 12)
frameUICorner.Parent = frame

-- Título
local title = Instance.new("TextLabel")
title.Text = "REP ANTI LAG"
title.Size = UDim2.new(1, -20, 0, 40)
title.Position = UDim2.new(0, 10, 0, 10)
title.BackgroundTransparency = 1
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.Font = Enum.Font.GothamBold
title.TextSize = 22
title.TextXAlignment = Enum.TextXAlignment.Left
title.Parent = frame

-- Separador semi-transparente
local separator = Instance.new("Frame")
separator.Size = UDim2.new(1, -20, 0, 3)
separator.Position = UDim2.new(0, 10, 0, 50)
separator.BackgroundColor3 = Color3.fromRGB(255,255,255)
separator.BackgroundTransparency = 0.7 -- semi-transparente
separator.BorderSizePixel = 0
separator.Parent = frame

local separatorCorner = Instance.new("UICorner")
separatorCorner.CornerRadius = UDim.new(0, 2)
separatorCorner.Parent = separator

-- Botón Auto-Slap
local button = Instance.new("TextButton")
button.Size = UDim2.new(0.9, 0, 0, 45)
button.Position = UDim2.new(0.05, 0, 0, 65)
button.BackgroundColor3 = Color3.fromRGB(70,70,70)
button.BackgroundTransparency = 0.6 -- semi-transparente
button.Text = "FPS DEVOURER V2"
button.TextColor3 = Color3.fromRGB(255, 255, 255)
button.Font = Enum.Font.GothamSemibold
button.TextSize = 18
button.AutoButtonColor = false
button.Parent = frame
button.ClipsDescendants = true
button.BorderSizePixel = 0
button.TextScaled = true
button.TextWrapped = true

local buttonCorner = Instance.new("UICorner")
buttonCorner.CornerRadius = UDim.new(0, 10)
buttonCorner.Parent = button

-- Hover effect
button.MouseEnter:Connect(function()
    TweenService:Create(button, TweenInfo.new(0.2), {BackgroundTransparency = 0.3}):Play()
end)
button.MouseLeave:Connect(function()
    if autoSlapEnabled then
        TweenService:Create(button, TweenInfo.new(0.2), {BackgroundTransparency = 0.3}):Play()
    else
        TweenService:Create(button, TweenInfo.new(0.2), {BackgroundTransparency = 0.6}):Play()
    end
end)

-- Estado
local status = Instance.new("TextLabel")
status.Size = UDim2.new(0.9, 0, 0, 28)
status.Position = UDim2.new(0.05, 0, 0, 120)
status.BackgroundTransparency = 1
status.TextColor3 = Color3.fromRGB(255,255,255)
status.Font = Enum.Font.Gotham
status.TextSize = 16
status.Text = "Estado: DESACTIVADO"
status.TextXAlignment = Enum.TextXAlignment.Left
status.Parent = frame

-- =========================
-- Auto-slap robusto
-- =========================
local function toggleDarkMatterSlap()
    local char = player.Character
    if not char then return end

    local tool = backpack:FindFirstChild(SLAP_NAME) or char:FindFirstChild(SLAP_NAME)
    if not tool then
        local original = StarterPack:FindFirstChild(SLAP_NAME)
        if original then
            tool = original:Clone()
            tool.Parent = backpack
        else
            return
        end
    end

    local humanoid = char:FindFirstChild("Humanoid")
    if not humanoid then return end

    local currentTool = humanoid:FindFirstChildOfClass("Tool")
    local wasEquipped = (tool.Parent == char)

    if not wasEquipped then
        humanoid:EquipTool(tool)
    end

    pcall(function()
        if tool:FindFirstChildOfClass("RemoteEvent") then
            tool:FindFirstChildOfClass("RemoteEvent"):FireServer()
        elseif tool:FindFirstChild("Activate") then
            tool.Activate:Fire()
        end
    end)

    task.wait(0.05)

    if not wasEquipped then
        if currentTool and currentTool ~= tool then
            humanoid:EquipTool(currentTool)
        else
            tool.Parent = backpack
        end
    end
end

local function startAutoSlap()
    task.spawn(function()
        while autoSlapEnabled do
            pcall(toggleDarkMatterSlap)
            task.wait(0.05)
        end
    end)
end

local function toggleAutoSlap()
    autoSlapEnabled = not autoSlapEnabled
    if autoSlapEnabled then
        TweenService:Create(button, TweenInfo.new(0.2), {BackgroundTransparency = 0.3}):Play()
        startAutoSlap()
    else
        TweenService:Create(button, TweenInfo.new(0.2), {BackgroundTransparency = 0.6}):Play()
    end
    status.Text = "Estado: " .. (autoSlapEnabled and "ACTIVADO" or "DESACTIVADO")
end

button.MouseButton1Click:Connect(toggleAutoSlap)
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if input.KeyCode == Enum.KeyCode.R then
        toggleAutoSlap()
    end
end)

-- =========================
-- Draggable menú
-- =========================
local dragging
local dragInput
local dragStart
local startPos

local function update(input)
    local delta = input.Position - dragStart
    frame.Position = UDim2.new(
        startPos.X.Scale,
        startPos.X.Offset + delta.X,
        startPos.Y.Scale,
        startPos.Y.Offset + delta.Y
    )
end

frame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = frame.Position

        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

frame.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement then
        dragInput = input
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        update(input)
    end
end)

